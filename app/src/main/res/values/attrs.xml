<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Indicator"></declare-styleable>
    <string-array name="date">
        <item>年</item>
        <item>月</item>
        <item>日</item>
        <item>时</item>
        <item>分</item>
    </string-array>

    <!--AutoLinkStyleTextView-->
    <declare-styleable name="AutoLinkStyleTextView">
        <attr name="AutoLinkStyleTextView_text_value" format="string|reference" />
        <attr name="AutoLinkStyleTextView_default_color" format="color|reference" />
        <attr name="AutoLinkStyleTextView_has_under_line" format="boolean" />
    </declare-styleable>

    <declare-styleable name="BadgeView">
        <attr name="badge_padding_top" format="dimension" />
        <attr name="badge_padding_right" format="dimension" />
        <attr name="badge_count" format="integer" />
        <attr name="badge_none_show" format="boolean" />
        <attr name="badge_color" format="color" />
    </declare-styleable>

    <declare-styleable name="AmountView">
        <!-- 左右2边+-按钮的宽度 -->
        <attr name="btnWidth" format="dimension" />
        <!-- 中间TextView的宽度 -->
        <attr name="tvWidth" format="dimension" />
        <!--<attr name="tvColor" format="color"/>-->
        <attr name="tvTextSize" format="dimension" />
        <attr name="btnTextSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SelectMultiCheckGroup">
        <!-- 单选还是多选-->
        <attr name="isSingleSelected" format="boolean" />
        <!-- 列 -->
        <attr name="column" format="integer" />
        <!-- 行 -->
        <attr name="row" format="integer" />
        <!-- item 之间的水平间距 -->
        <attr name="item_horizontal_space" format="dimension" />
        <!-- item 之间的垂直间距 -->
        <attr name="item_vertical_space" format="dimension" />
        <!-- item 中的水平内边距 -->
        <attr name="item_horizontal_padding" format="dimension" />
        <!-- item 中的垂直内边距 -->
        <attr name="item_vertical_padding" format="dimension" />
        <!-- item 字体大小 -->
        <attr name="item_text_size" format="integer" />
    </declare-styleable>


    <declare-styleable name="ShapedImageView">
        <attr name="shape_mode" format="enum">
            <enum name="round_rect" value="1" />
            <enum name="circle" value="2" />
        </attr>
        <attr name="round_radius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="TabLayoutPlus">
        <attr name="subTextSize" format="dimension|reference" />
        <attr name="countTextColor" format="color|reference" />
        <attr name="countTextSize" format="dimension|reference" />
        <attr name="countTextBackground" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="AddMemberView">
        <attr name="headImageRes" format="reference" />
        <attr name="headText" format="string" />
        <attr name="rightText" format="string" />
        <attr name="navigateImgeRes" format="reference" />
        <attr name="showLine" format="boolean" />
        <attr name="contentHint" format="string" />
        <attr name="clearEditFocus" format="boolean" />
        <attr name="showNavigate" format="boolean" />
        <attr name="canEdit" format="boolean" />
    </declare-styleable>

    <!-- 公共监控 -->
    <declare-styleable name="LoadingTextView">
        <attr name="textStyle">
            <enum name="noText" value="-1" />
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="gravity" format="integer" />
        <attr name="textSize" format="dimension" />
        <attr name="textColor" format="color" />
        <attr name="textPadding" format="dimension" />
        <attr name="android:text" />
    </declare-styleable>

    <declare-styleable name="TitleBar">
        <attr name="textColor" />
        <attr name="background" format="reference" />
        <attr name="backButton" format="reference" />
    </declare-styleable>
    <declare-styleable name="SlideDetailsLayout">
        <!-- float value for indicate the moment of switch panel-->
        <attr name="percent" format="float" />
        <!-- how long the animation keep-->
        <attr name="duration" format="integer" />
        <!-- default panel to show after init-->
        <attr name="default_panel" format="enum">
            <enum name="front" value="0" />
            <enum name="behind" value="1" />
        </attr>
    </declare-styleable>


    <declare-styleable name="MineOrderEventView">
        <attr name="text_desc" format="string|reference" />
        <attr name="icon_src" format="reference" />
        <attr name="color_desc" format="color|reference" />
    </declare-styleable>
    <declare-styleable name="MineSettingView">
        <attr name="text_setting" format="string" />
        <attr name="text_color" format="color|reference" />
        <attr name="src_icon" format="reference" />
        <attr name="show_line" format="boolean" />
        <attr name="left_margin" format="dimension" />
        <attr name="right_margin" format="dimension" />
        <attr name="text_left_margin" format="dimension" />
    </declare-styleable>
    <declare-styleable name="MarketActionBarView">
        <attr name="action_bar_color" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="MallGoodsListRankView">
        <attr name="text_desc" />
        <attr name="show_line" />
    </declare-styleable>

    <style name="BaseDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/bg_dialog</item>
    </style>

    <declare-styleable name="ConfirmOrderSelectView">
        <attr name="text_desc" />
        <attr name="show_price" format="boolean" />
        <attr name="show_switch" format="boolean" />
    </declare-styleable>
    <declare-styleable name="OrderAddressView">
        <attr name="show_hint" format="boolean" />
        <attr name="show_arrow" format="boolean" />
    </declare-styleable>
    <declare-styleable name="OrderDetailSelectView">
        <attr name="text_desc" />
        <attr name="text_title" format="string|reference" />
        <attr name="show_line" />
    </declare-styleable>
    <declare-styleable name="GoodsListSearchView">
        <attr name="edit_show" format="boolean" />
    </declare-styleable>
    <declare-styleable name="OrderComplainDetailItemView">
        <attr name="text_desc" />
        <attr name="show_line" />
    </declare-styleable>

    <declare-styleable name="BezierBannerDot">
        <attr name="selectedColor" format="color" />
        <attr name="unSelectedColor" format="color" />
        <attr name="selectedRaduis" format="dimension" />
        <attr name="unSelectedRaduis" format="dimension" />
        <attr name="spacing" format="dimension" />
    </declare-styleable>
    <declare-styleable name="MyAdView">
        <attr name="selectedColor"  />
        <attr name="unSelectedColor" />
        <attr name="selectedRaduis"  />
        <attr name="unSelectedRaduis"  />
        <attr name="spacing" />
    </declare-styleable>
</resources>
