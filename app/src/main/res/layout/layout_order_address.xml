<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="202px"
    android:background="@color/white"
    android:paddingLeft="40px"
    android:paddingRight="40px">

    <ImageView
        android:id="@+id/icon_confirm_order_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@mipmap/qrdd_dz01" />

    <TextView
        android:id="@+id/tv_confirm_order_hint_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14px"
        android:layout_toRightOf="@id/icon_confirm_order_address"
        android:text="请添加您的收获地址"
        android:textColor="@color/color_b4b4b4"
        android:textSize="40px"
        android:visibility="visible"
        />

    <ImageView
        android:id="@+id/icon_confirm_order"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/spxq_jt" />

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_confirm_order_address_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14px"
        android:layout_toLeftOf="@+id/icon_confirm_order"
        android:layout_toRightOf="@id/icon_confirm_order_address"
        android:orientation="vertical"
        android:visibility="invisible">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_confirm_order_address_name"
                tools:text="张三丰"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_323232"
                android:textSize="40px" />

            <TextView
                android:id="@+id/tv_confirm_order_address_phone"
                tools:text="13812345678"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="34px"
                android:textColor="@color/color_323232"
                android:textSize="40px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:id="@+id/tv_confirm_order_address"
            tools:text="湖南省长沙市雨花区中远公馆"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_323232"
            android:textSize="40px" />

    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>