<?xml version="1.0" encoding="utf-8"?>
<com.yxld.yxchuangxin.view.AutoCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="350px"
    android:layout_marginLeft="40px"
    android:layout_marginRight="40px"
    android:id="@+id/root_layout"
    android:layout_marginTop="34px"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="14px"
    >
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:padding="50px"
        >

        <ImageView
            android:id="@+id/iv_mall_goods_product"
            android:layout_width="254px"
            android:layout_height="254px"
            android:layout_centerVertical="true"
            android:src="@mipmap/spss_sp" />
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40px"
            >
            <TextView
            android:id="@+id/tv_mall_goods_product_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="40px"
            tools:text="张新发槟榔张新发槟榔张新发槟榔张新发槟榔"
            />

            <TextView
                android:id="@+id/tv_mall_goods_stock_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24px"
                android:textSize="34px"
                android:textColor="@color/color_909090"
                android:layout_below="@id/tv_mall_goods_product_title"
                tools:text="库存139"
                />
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="78px"
                android:layout_alignParentBottom="true"
                >

                <TextView
                    android:id="@+id/tv_mall_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="50px"
                    android:textColor="@color/color_ff9934"
                    tools:text="¥ 59.50"
                    />
                <ImageView
                    android:id="@+id/iv_mall_goods_cart"
                    android:layout_width="78px"
                    android:layout_height="78px"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/spss_gwc"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    />
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.yxld.yxchuangxin.view.AutoCardView>