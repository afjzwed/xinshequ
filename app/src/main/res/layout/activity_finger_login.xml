<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bgimg"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="290px"
        android:layout_height="290px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200px"
        android:scaleType="centerCrop"
        android:background="@mipmap/gyem_logo"/>

    <TextView
        android:id="@+id/text_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pattern_lock_view"
        android:layout_marginBottom="80px"
        android:layout_centerHorizontal="true"
        android:textSize="50px"/>

    <com.github.ihsg.patternlocker.PatternLockerView
        android:id="@+id/pattern_lock_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="400px"
        android:layout_marginLeft="160px"
        android:layout_marginRight="160px"
        app:plv_color="@color/blue"
        app:plv_errorColor="@color/red"
        app:plv_fillColor="@color/white"
        app:plv_hitColor="@color/blue"
        app:plv_lineWidth="5px"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100px"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/img_finger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="指纹登录"
            android:textColor="@color/white"
            android:textSize="45px"/>

        <TextView
            android:id="@+id/text_fenge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="  |   "
            android:textSize="45px"/>

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号登录"
            android:textColor="@color/white"
            android:textSize="45px"/>
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>