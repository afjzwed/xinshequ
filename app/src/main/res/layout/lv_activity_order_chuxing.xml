<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_marginTop="8dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_main"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:transitionName="one"
                />
            <ImageView
                android:id="@+id/iv_mask"
                android:layout_width="200dp"
                android:layout_height="180dp"
                android:background="#4c000000"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_order_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="看电影"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#fff"
                    android:textSize="19sp"
                    />
                <TextView
                    android:id="@+id/tv_order_subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="##"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#fff"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>
        <ImageView
            android:id="@+id/iv_activity_avater"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:scaleType="centerCrop"
            android:layout_alignBottom="@+id/img"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:transitionName="two"
            />
        <ImageView
            android:id="@+id/iv_isLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/img"
            android:layout_alignRight="@+id/img"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            />
        <RelativeLayout
            android:layout_below="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="55dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_activity_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="万达影院"
                    android:layout_marginLeft="5dp"
                    android:drawablePadding="5dp"
                    android:textSize="12sp"
                    android:textColor="#666"
                    android:maxEms="8"
                    android:ellipsize="end"
                    android:lines="1"
                    />
                <TextView
                    android:id="@+id/tv_activity_zijiayou_tianshu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天数"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:drawablePadding="5dp"
                    android:textSize="12sp"
                    android:textColor="#666"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/tv_activity_shunfeng_mdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_below="@+id/tv_activity_name"
                    android:layout_marginLeft="5dp"
                    android:drawablePadding="5dp"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:maxEms="6"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textSize="12sp"
                    android:textColor="#666"
                    />
                <TextView
                    android:id="@+id/tv_activity_fufeifangshi"
                    android:layout_below="@+id/tv_activity_name"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:text="我请客"
                    android:textSize="12sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    />
                <TextView
                    android:id="@+id/tv_activity_chufashijian"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_activity_name"
                    android:layout_marginTop="8dp"
                    android:layout_height="15dp"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:text="shijian"
                    android:textColor="#9a9a9a"
                    android:layout_marginRight="5dp"
                    />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>