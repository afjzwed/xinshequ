<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5">

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="109px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="46px"
        android:text="候选人确定阶段-进行中"
        android:textColor="@color/color_2d97ff"
        android:textSize="43px"/>

    <ImageView
        android:id="@+id/iv_no_data"
        android:layout_width="531px"
        android:layout_height="531px"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_no_data"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/autoll_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_status"
        android:layout_marginTop="28px"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="46px"
        android:paddingRight="72px"
        android:paddingTop="46px"
        android:visibility="gone">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="43px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="75px"
                android:layout_height="75px"
                android:src="@mipmap/ic_ywh_start"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40px"
                android:text="已启动候选人推荐程序"
                android:textColor="@color/color_333333"
                android:textSize="43px"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:id="@+id/tv_content_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="43px"
            android:gravity="center_vertical"
            android:lineSpacingExtra="20px"
            android:maxLines="2"
            android:text="请在2018-09-02前确认"
            android:textColor="@color/color_999999"
            android:textSize="43px"
            android:visibility="visible"/>

        <View
            style="@style/line"
            android:layout_marginTop="6px"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="推荐候选人成员"
                android:textColor="@color/main_color"
                android:textSize="43px"/>

            <ImageView
                android:layout_width="21px"
                android:layout_height="38px"
                android:src="@mipmap/ic_jt_blue"/>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>