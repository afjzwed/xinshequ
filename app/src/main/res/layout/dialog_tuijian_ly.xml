<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="900px"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="160px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="60px"
            android:layout_height="59px"
            android:layout_marginLeft="73px"
            android:src="@mipmap/ic_tj_ly"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28px"
            android:text="填写推荐理由"
            android:textColor="@color/color_333333"
            android:textSize="43px"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="73px"
        android:layout_marginRight="73px"
        android:background="#f4f4f4"
        android:minHeight="400px"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:id="@+id/et_content"
            android:gravity="top|left"
            android:minHeight="400px"
            android:text=""/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="30px"
            android:text="0/200"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <View
        style="@style/line"
        android:layout_marginTop="50px"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="144px"
        android:background="@color/white"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/bt_dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_left_btn_bg"
            android:text="取消"
            android:textColor="#666666"
            android:textSize="52px"
            />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/line1"
            />

        <Button
            android:id="@+id/bt_dialog_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_right_btn_bg"
            android:text="提交"
            android:textColor="@color/color_0061c0"
            android:textSize="52px"
            />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>