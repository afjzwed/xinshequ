<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                     xmlns:app="http://schemas.android.com/apk/res-auto"
                                     android:layout_width="match_parent"
                                     android:layout_height="wrap_content"
                                     android:orientation="vertical"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="26px"
        />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="134px"
        android:background="@color/white"
        >

        <com.yxld.yxchuangxin.view.AutoCardView
            android:id="@+id/auto_card"
            android:layout_width="84px"
            android:layout_height="84px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:elevation="10px"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="14px">

            <ImageView
                android:id="@+id/img_story_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_standard"/>
        </com.yxld.yxchuangxin.view.AutoCardView>

        <TextView
            android:id="@+id/tv_story_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="28px"
            android:layout_toRightOf="@+id/auto_card"
            android:text="家有喜事"
            android:textColor="@color/color_323232"
            android:textSize="40px"/>


        <TextView
            android:id="@+id/tv_order_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40px"
            android:text="待接单"
            android:textColor="@color/color_0079C2"
            android:textSize="40px"/>

    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="1040px"
        android:layout_height="1px"
        android:layout_marginLeft="40px"
        android:background="@color/color_d6d7dc"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:layout_marginTop="32px"
            android:text="订单编号:"
            android:textColor="@color/color_646464"
            android:textSize="40px"/>

        <TextView
            android:id="@+id/tv_order_bianhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginTop="32px"
            android:text="420256874674"
            android:textColor="@color/color_646464"
            android:textSize="40px"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:layout_marginTop="32px"
            android:text="下单时间:"
            android:textColor="@color/color_646464"
            android:textSize="40px"/>

        <TextView
            android:id="@+id/tv_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginTop="32px"
            android:text="2017-5-1 11:30"
            android:textColor="@color/color_646464"
            android:textSize="40px"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:layout_marginTop="32px"
            android:text="总 金 额  :"
            android:textColor="@color/color_646464"
            android:textSize="40px"/>

        <TextView
            android:id="@+id/tv_order_totalmoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32px"
            android:layout_marginLeft="30px"
            android:layout_marginTop="32px"
            android:text="¥160"
            android:textColor="@color/color_646464"
            android:textSize="40px"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="1040px"
        android:layout_height="1px"
        android:layout_marginLeft="40px"
        android:background="@color/color_d6d7dc"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="134px"
        android:background="@color/white">


        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40px"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_small"
                android:layout_width="140px"
                android:layout_height="84px"
                android:layout_centerVertical="true"
                android:background="@drawable/buttom_border_14_99999_all"
                android:text="小按钮"
                android:textColor="@color/color_909090"
                android:textSize="40px"
                />

            <Button
                android:id="@+id/btn_big_gray_1"
                android:layout_width="220px"
                android:layout_height="84px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16px"
                android:background="@drawable/buttom_border_14_99999_all"
                android:text="灰大按钮1"
                android:textColor="@color/color_909090"
                android:textSize="40px"
                />

            <Button
                android:id="@+id/btn_big_gray_2"
                android:layout_width="220px"
                android:layout_height="84px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16px"
                android:layout_marginRight="16px"
                android:background="@drawable/buttom_border_14_99999_all"
                android:text="取消订单"
                android:textColor="@color/color_909090"
                android:textSize="40px"/>

            <Button
                android:id="@+id/btn_big_blue"
                android:layout_width="220px"
                android:layout_height="84px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16px"
                android:background="@drawable/buttom_border_14_0079c2_all"
                android:text="蓝色按钮"
                android:textColor="@color/color_0079C2"
                android:textSize="40px"
                />
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_d6d7dc"/>
</com.zhy.autolayout.AutoLinearLayout>