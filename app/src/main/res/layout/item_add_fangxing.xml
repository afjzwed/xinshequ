<?xml version="1.0" encoding="utf-8"?>
<com.yxld.yxchuangxin.view.AutoCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="40px"
    android:layout_marginRight="40px"
    android:layout_marginBottom="40px"
    app:cardCornerRadius="14px"
    android:layout_height="wrap_content">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="34px"
        android:layout_marginRight="34px"
        android:layout_height="wrap_content">
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="134px">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="雨伞*2"
                android:textSize="44px"
                android:textColor="@color/color_323232"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:id="@+id/iv_reset"
                android:layout_width="44px"
                android:layout_height="44px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/sqfx_biji"
                />
            <View
                style="@style/line"
                android:layout_alignParentBottom="true"
                />
        </com.zhy.autolayout.AutoRelativeLayout>
        <TextView
            android:id="@+id/tv_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="40px"
            android:textColor="@color/color_646464"
            android:layout_marginBottom="14px"
            android:layout_marginTop="34px"
            android:lineSpacingExtra="20px"
            />
    </com.zhy.autolayout.AutoLinearLayout>
</com.yxld.yxchuangxin.view.AutoCardView>