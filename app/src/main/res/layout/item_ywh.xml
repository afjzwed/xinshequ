<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="40px"
    android:paddingRight="40px"
    android:paddingTop="40px">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="43px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="75px"
            android:id="@+id/img_step"
            android:layout_height="75px"
            android:src="@mipmap/ic_ywh_start"/>

        <TextView
            android:id="@+id/tv_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:text="已正式发起业委会成立阶段"
            android:textColor="@color/color_333333"
            android:textSize="43px"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:id="@+id/tv_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#999999"
        android:layout_marginBottom="49px"
        android:textSize="43px"/>

    <View style="@style/line"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:id="@+id/ll_tjcy"
        android:layout_height="130px"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/tv_tjcy"
            android:text="推荐筹备组成员"
            android:textColor="@color/color_2d97ff"
            android:textSize="43px"/>

        <TextView
            android:id="@+id/tv_shzt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20px"
            android:textSize="43px"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="21px"
            android:layout_height="38px"
            android:layout_marginRight="30px"
            android:src="@mipmap/ic_jt_blue"/>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>