<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="50px"
            android:paddingLeft="46px"
            android:paddingRight="46px"
            android:paddingTop="50px">

            <TextView
                android:id="@+id/title_recommend_member"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="圣诞节了疯狂家里的事"
                android:textColor="@color/color_333333"
                android:textSize="50px"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_send_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="43px"
                android:text="发布时间："
                android:textColor="@color/color_999999"
                android:textSize="40px"/>

            <TextView
                android:id="@+id/tv_notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="43px"
                android:lineSpacingExtra="28px"
                android:text="杀戮空间发了圣诞节福利速度快解放路口圣诞节福利点就开始了房价快速熟练度附近代理商科技发生了的杀戮空间发了圣诞节福利速度快解放路口圣诞节福利点就开始了房价快速熟练度附近代理商科技发生了的家乐福开机了杀戮空间发了圣诞节福利速度快解放路口圣诞节福利点就开始了房价快速熟练度附近代理商科技发生了的家乐福开机了杀戮空间发了圣诞节福利速度快解放路口圣诞节福利点就开始了房价快速熟练度附近代理商科技发生了的家乐福开机了家乐福开机了"
                android:textColor="@color/umeng_socialize_text_share_content"
                android:textSize="42px"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_marginTop="60px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/bg_ywh_memberlist"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="43px"
                android:paddingRight="29px"
                android:paddingTop="52px">

                <ImageView
                    android:layout_width="57px"
                    android:layout_height="50px"
                    android:src="@mipmap/ic_ywh_accessory1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="业主大会成员名单公示"
                    android:textColor="@color/black"
                    android:textSize="43px"/>

                <TextView
                    android:layout_width="173px"
                    android:layout_height="72px"
                    android:background="@drawable/bg_btn_ywh10"
                    android:gravity="center"
                    android:text="下载"
                    android:textColor="@color/white"
                    android:textSize="34px"/>
            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>
    </ScrollView>

</com.zhy.autolayout.AutoLinearLayout>