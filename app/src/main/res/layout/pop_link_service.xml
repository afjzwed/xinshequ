<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/bg_transparent" >

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/blue" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="134px"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="134px"
                android:textColor="@color/color_ff9934"
                android:gravity="center"
                android:textSize="48px"
                android:text="请选择联系人" />
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line" />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/shangjia"
            android:layout_width="match_parent"
            android:layout_height="134px"
            android:background="@drawable/bt_nobgd"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/shangjia_dianhua"
                android:layout_width="wrap_content"
                android:layout_height="134px"
                android:gravity="center"
                android:drawableLeft="@mipmap/phonekf"
                android:textColor="@color/color_ff9934"
                android:textSize="48px"
                android:text="客服电话" />
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line" />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/kefu"
            android:layout_width="match_parent"
            android:layout_height="134px"
            android:background="@drawable/bt_nobgd"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/kefu_telephone"
                android:layout_width="wrap_content"
                android:layout_height="134px"
                android:gravity="center"
                android:drawablePadding="5px"
                android:textColor="@color/color_ff9934"
                android:drawableLeft="@mipmap/phonekf"
                android:textSize="48px"
                android:text="商家电话" />
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line" />


        <Button
            android:visibility="gone"
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="134px"
            android:background="@drawable/bt_nobgd"
            android:textColor="@color/color_333"
            android:textSize="48px"
            android:text="取消" />
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>