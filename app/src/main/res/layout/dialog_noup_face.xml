<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="460px"
    android:layout_gravity="center"
    android:layout_marginLeft="50px"
    android:layout_marginRight="50px"
    android:background="@drawable/bg_dialog"
    android:minHeight="460px">

    <ImageButton
        android:id="@+id/iv_close_fase"
        android:layout_width="30px"
        android:layout_height="30px"
        android:layout_alignParentRight="true"
        android:layout_marginRight="43px"
        android:layout_marginTop="54px"
        android:background="@mipmap/close_face"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="120px"
            android:layout_height="120px"
            android:layout_marginTop="78px"
            android:src="@mipmap/noup_face"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="78px"
            android:text="抱歉!您没有上传人像权限"
            android:textColor="@color/color_333333"
            android:textSize="52px"/>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>