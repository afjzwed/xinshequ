<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    >

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="134px"
        android:background="@color/white"
        android:paddingLeft="40px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="缴费内容"

            />

        <TextView
            android:id="@+id/tv_neirong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40px"
            android:text=""
            android:hint="请选择缴费内容"
            android:textColor="@color/black"
            android:drawablePadding="20px"
            android:drawableRight="@mipmap/arrow_bottom"
            />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        style="@style/line"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="134px"
        android:background="@color/white"
        android:paddingLeft="40px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="上次缴费截止"
            />

        <TextView
            android:id="@+id/tv_shangcitime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40px"
            android:text=""
            android:textColor="@color/black"
            />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View style="@style/line"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="134px"
        android:background="@color/white"
        android:paddingLeft="40px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="当前缴费截止"
            />

        <TextView
            android:id="@+id/tv_dangqiantime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40px"
            android:text=""
            android:textColor="@color/black"
            />
    </com.zhy.autolayout.AutoRelativeLayout>


    <View style="@style/line"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="134px"
        android:background="@color/white"
        android:paddingLeft="40px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="缴费类型"
            />

        <TextView
            android:id="@+id/tv_leixing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40px"
            android:text=""
            android:textColor="@color/black"
            />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View style="@style/line"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="134px"
        android:background="@color/white"
        android:paddingLeft="40px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="选择续费期限"
            />

        <TextView
            android:id="@+id/tv_qixian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40px"
            android:drawablePadding="20px"
            android:drawableRight="@mipmap/arrow_bottom"
            android:gravity="right|center"
            android:hint="请选择续费期限"
            android:textColor="@color/black"
            />

    </com.zhy.autolayout.AutoRelativeLayout>

    <View style="@style/line"/>


    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240px"
        android:background="@mipmap/scsyt_bj"
        android:paddingTop="50px"
        android:paddingLeft="40px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付金额"
            android:textColor="@color/black"
            android:textSize="60px"
            />
        <TextView
            android:id="@+id/tv_danjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textSize="60px"/>

        <TextView
            android:id="@+id/tv_zongjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_danjia"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="40px"
            android:text=""
            android:textColor="@color/blue"
            android:textSize="60px"/>

        <TextView
            android:layout_marginTop="10px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tv_danjia"
            android:layout_marginRight="40px"
            android:text="(*其中居家安防增值服务包含：流量服务费)"
            android:textColor="@color/red"
            android:textSize="12sp"
            />
    </com.zhy.autolayout.AutoRelativeLayout>


    <Button
        android:id="@+id/surePay"
        android:layout_width="1000px"
        android:layout_height="134px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200px"
        android:background="@drawable/color_main"
        android:text="确认支付"
        android:textColor="@color/white"
        android:textSize="48px"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="点击确认支付即视为同意"/>

        <TextView
            android:id="@+id/tv_xieyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 用户协议"
            android:textSize="12sp"
            android:textColor="@color/blue"/>
    </LinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
