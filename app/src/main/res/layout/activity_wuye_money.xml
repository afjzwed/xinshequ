<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="976px">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="656px"
            android:background="@mipmap/wxjf_bj"
            />
        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/tv_xiangmu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:ms_background_color="@color/color_00000000"
            android:layout_marginTop="270px"
            android:textSize="48px"
            app:ms_text_color="@color/white"
            />
        <com.yxld.yxchuangxin.view.AutoCardView
            android:layout_width="888px"
            android:layout_marginTop="438px"
            app:cardElevation="@dimen/card_view_elevation"
            app:cardCornerRadius="14px"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_centerHorizontal="true"
            android:layout_height="400px">
            <com.zhy.autolayout.AutoRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="400px">
                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="444px"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="欠缴费用"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/color_646464"
                        android:textSize="40px"
                        android:layout_marginTop="88px"
                        android:layout_marginLeft="0px"
                        android:id="@+id/textView3" />
                    <TextView
                        android:id="@+id/tv_qianjiao"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_below="@+id/textView3"
                        android:textColor="@color/color_ff9934"
                        android:layout_marginTop="52px"
                        android:layout_marginRight="0dp"
                        android:layout_marginLeft="0dp"
                        />
                </com.zhy.autolayout.AutoRelativeLayout>
                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_width="444px"
                    android:layout_alignParentRight="true"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="预缴费用"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/color_646464"
                        android:textSize="40px"
                        android:layout_marginTop="88px"
                        android:layout_marginLeft="0px"
                        android:layout_marginRight="0px"
                        android:id="@+id/textView4" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥ 0.0"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/textView4"
                        android:layout_marginLeft="0px"
                        android:layout_marginRight="0px"
                        android:layout_marginTop="52px"
                        android:textColor="@color/main_color"
                        android:id="@+id/tv_yujiao" />
                </com.zhy.autolayout.AutoRelativeLayout>
                <View
                    android:layout_width="1px"
                    android:layout_height="136px"
                    android:background="@color/line"
                    android:layout_marginTop="106px"
                    android:layout_centerInParent="true"
                    android:id="@+id/view2" />

                <TextView
                    android:id="@+id/tv_mingxi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="38px"
                    android:text="查看明细"
                    android:layout_below="@+id/view2"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/color_909090"
                    android:gravity="center"
                    android:padding="10px"
                    android:background="@drawable/jiaofei_mingxi_bg"
                     />
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.yxld.yxchuangxin.view.AutoCardView>
        <TextView
            android:id="@+id/tv_last_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40px"
            android:textSize="40px"
            android:textColor="@color/color_909090"
            android:text=""
            />
    </com.zhy.autolayout.AutoRelativeLayout>
    <View
        style="@style/layout_bg"/>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="40px"
        android:layout_height="134px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="缴费月数"
            android:layout_centerVertical="true"
            />
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="306px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_marginRight="40px"
            android:background="@drawable/pop_addfangxing_bg"
            android:layout_height="84px">
            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/iv_jian"
                android:layout_width="84px"
                android:layout_height="84px">
                <ImageView
                    android:layout_width="wrap_content"
                    android:background="@mipmap/wyjf_jh01"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content" />
            </com.zhy.autolayout.AutoRelativeLayout>
            <TextView
                android:id="@+id/tv_count"
                android:layout_width="138px"
                android:text="0"
                android:gravity="center"
                android:layout_height="84px" />
            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/iv_jia"
                android:layout_width="84px"
                android:layout_height="84px">
                <ImageView
                    android:layout_width="wrap_content"
                    android:background="@mipmap/wyjf_jh02"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content" />
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoLinearLayout>
        <View
            style="@style/line"
            android:layout_alignParentBottom="true"
            />
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="40px"
        android:layout_height="134px">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总计金额"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_zongji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40px"
            android:textColor="@color/color_ff9934"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40px"
            android:layout_centerVertical="true"
            />
    </com.zhy.autolayout.AutoRelativeLayout>
    <View
        style="@style/layout_bg"/>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="40px"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_height="134px">
        <ImageView
            android:id="@+id/iv1"
            android:layout_width="68px"
            android:layout_height="68px"
            android:src="@mipmap/scsyt_zfb01"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝账户"
            android:layout_toRightOf="@+id/iv1"
            android:layout_marginLeft="32px"
            android:textColor="@color/color_323232"
            android:textSize="40px"
            android:layout_centerVertical="true"
            />
        <cn.refactor.library.SmoothCheckBox
            android:id="@+id/cb_zhifubao"
            android:layout_width="58px"
            android:layout_height="60px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40px"
            android:button="@drawable/pay_selector"
            app:color_checked="@color/main_color"
            />
        <View
            style="@style/line"
            android:layout_alignParentBottom="true"
            />
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="40px"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_height="134px">
        <ImageView
            android:id="@+id/iv2"
            android:layout_width="68px"
            android:layout_height="68px"
            android:src="@mipmap/scsyt_zfb02"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信账户"
            android:layout_toRightOf="@+id/iv2"
            android:layout_marginLeft="32px"
            android:textColor="@color/color_323232"
            android:textSize="40px"
            android:layout_centerVertical="true"
            />
        <cn.refactor.library.SmoothCheckBox
            android:id="@+id/cb_weixin"
            android:layout_width="58px"
            android:layout_height="60px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40px"
            android:button="@drawable/pay_selector"
            app:color_checked="@color/main_color"
            />
        <View
            style="@style/line"
            android:layout_alignParentBottom="true"
            />
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="40px"
        android:clickable="true"
        android:visibility="gone"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_height="134px">
        <ImageView
            android:id="@+id/iv3"
            android:layout_width="68px"
            android:layout_height="68px"
            android:src="@mipmap/scsyt_zfb03"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="银联"
            android:layout_toRightOf="@+id/iv3"
            android:layout_marginLeft="32px"
            android:textColor="@color/color_323232"
            android:textSize="40px"
            android:layout_centerVertical="true"
            />
        <cn.refactor.library.SmoothCheckBox
            android:id="@+id/cb_yinlian"
            android:layout_width="58px"
            android:layout_height="60px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40px"
            android:button="@drawable/pay_selector"
            app:color_checked="@color/main_color"
            />
    </com.zhy.autolayout.AutoRelativeLayout>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:background="@color/line"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/bt_submit"
            android:layout_width="1000px"
            android:layout_height="134px"
            android:text="立即缴费"
            android:layout_centerInParent="true"
            android:textSize="44px"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/jiaofei_liji_bg"
            android:textColor="@color/white"
            />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>