<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="40px"
    android:paddingRight="40px"
    android:background="@drawable/selector_click_recycler_item_bg"
    android:clickable="true"
    >
    <TextView
        android:id="@+id/tv_confirm_order_select_desc"
        style="@style/size40_909090"
        android:layout_centerVertical="true"
        tools:text="商品金额"
        />
    <TextView
        android:id="@+id/tv_confirm_order_select_price"
        style="@style/size40_ff9934"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        tools:text="¥ 100"
        android:visibility="gone"
         />
    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switch_confirm_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        />


    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/rl_dianziquan_container"
        android:layout_width="270px"
        android:layout_height="70px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/pop_addfangxing_bg"
        android:orientation="horizontal"
        android:visibility="visible"
        >

        <com.zhy.autolayout.AutoFrameLayout
            android:id="@+id/iv_dianziquan_jian"
            android:layout_width="70px"
            android:layout_height="70px"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@mipmap/wyjf_jh01" />
        </com.zhy.autolayout.AutoFrameLayout>

        <com.zhy.autolayout.AutoFrameLayout
            android:id="@+id/iv_dianziquan_jia"
            android:layout_width="70px"
            android:layout_height="70px"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@mipmap/wyjf_jh02" />
        </com.zhy.autolayout.AutoFrameLayout>

        <EditText
            android:id="@+id/tv_cart_count"
            android:layout_width="100px"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/iv_cart_jia"
            android:layout_toRightOf="@id/iv_cart_jian"
            android:gravity="center"
            android:textColor="@color/color_323232"
            android:textSize="40px"
            android:text="0"
            android:background="@null"
            android:imeOptions="actionNext"

            />
    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoRelativeLayout>