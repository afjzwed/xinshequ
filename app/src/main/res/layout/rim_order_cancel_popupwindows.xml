<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/bg_transparent">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="134px"
            android:gravity="center"
            android:text="请选择取消方式"
            android:textColor="@color/color_323232"
            android:textSize="48px"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_d6d7dc"/>

        <TextView
            android:id="@+id/tv_reason1"
            android:layout_width="match_parent"
            android:layout_height="134px"
            android:gravity="center"
            android:text="信息填写错误"
            android:textColor="@color/color_646464"
            android:textSize="40px"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_d6d7dc"/>

        <TextView
            android:id="@+id/tv_reason2"
            android:layout_width="match_parent"
            android:layout_height="134px"
            android:gravity="center"
            android:text="我不想要了"
            android:textColor="@color/color_646464"
            android:textSize="40px"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_d6d7dc"/>

        <TextView
            android:id="@+id/tv_reason3"
            android:layout_width="match_parent"
            android:layout_height="134px"
            android:gravity="center"
            android:text="其它"
            android:textColor="@color/color_646464"
            android:textSize="40px"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="14px"
            android:background="@mipmap/bg_transparent"/>

        <TextView
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="134px"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/color_0079C2"
            android:textSize="40px"/>

    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>