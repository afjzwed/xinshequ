<?xml version="1.0" encoding="utf-8"?>
<com.yxld.yxchuangxin.view.AutoCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300px"
    android:layout_marginTop="26px"
    android:layout_marginLeft="40px"
    android:layout_marginRight="40px"
    >

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="40px"
        android:paddingLeft="40px"
        android:paddingTop="58px"
        android:paddingBottom="58px"

        >
        <TextView
            android:id="@+id/tv_order_complain_type"
            style="@style/size40_ff9934"
            android:layout_alignParentRight="true"
            tools:text="未付款"
            />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toLeftOf="@id/tv_order_complain_type"
            >
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                >
                <TextView
                    style="@style/size40_909090"
                    android:text="单号"
                    />
                <TextView
                    android:id="@+id/tv_order_complain_order_num"
                    style="@style/size40_323232"
                    android:layout_marginLeft="30px"
                    tools:text="1000000000000000000"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
            </com.zhy.autolayout.AutoLinearLayout>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                >
                <TextView
                    style="@style/size40_909090"
                    android:text="时间"
                    />
                <TextView
                    android:id="@+id/tv_order_complain_time"
                    style="@style/size40_323232"
                    android:layout_marginLeft="30px"
                    tools:text="1000000000000000000"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
            </com.zhy.autolayout.AutoLinearLayout>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                >
                <TextView
                    style="@style/size40_909090"
                    android:text="内容"
                    />
                <TextView
                    android:id="@+id/tv_order_complain_content"
                    style="@style/size40_323232"
                    android:layout_marginLeft="30px"
                    tools:text="1000000000000000000"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoRelativeLayout>
</com.yxld.yxchuangxin.view.AutoCardView>