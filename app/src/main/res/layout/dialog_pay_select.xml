<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/bg_transparent"
    android:orientation="vertical"
    >
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/ll_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:layout_alignParentLeft="true">
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="134px"
        android:background="@color/white"
        android:gravity="center"
        android:paddingLeft="40px"
        android:paddingRight="40px"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="请选择支付方式"
            android:textColor="@color/color_323232"
            android:textSize="48px"/>
    </com.zhy.autolayout.AutoRelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:background="@color/color_d6d7dc"/>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="134px"
        android:background="@color/white"
        android:paddingLeft="40px"
        android:paddingRight="40px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/syt_zfb01"
            android:drawablePadding="34px"
            android:text="支付宝账户"
            android:gravity="center"
            android:textColor="@color/color_323232"
            android:textSize="40px"/>

        <CheckBox
            android:id="@+id/alipy_checked"
            android:layout_width="65px"
            android:layout_height="65px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:button="@null"
            android:background="@drawable/pay_selector"
            android:checked="false"
            app:color_checked="@color/main_color"
            />

    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:background="@color/color_d6d7dc"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="134px"
        android:background="@color/white"
        android:paddingLeft="40px"
        android:paddingRight="40px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/scsyt_zfb02"
            android:drawablePadding="34px"
            android:text="微信账户"
            android:gravity="center"
            android:textColor="@color/color_323232"
            android:textSize="40px"
            android:id="@+id/textView6"/>

        <CheckBox
            android:id="@+id/weixin_checked"
            android:layout_width="65px"
            android:layout_height="65px"
            android:button="@null"
            android:background="@drawable/pay_selector"
            app:color_checked="@color/main_color"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignParentEnd="true"/>

    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:background="@color/color_d6d7dc"/>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="134px"
        android:background="@color/white"
        android:visibility="gone"
        android:paddingLeft="40px"
        android:paddingRight="40px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/syt_zfb03"
            android:drawablePadding="34px"
            android:text="银联"
            android:gravity="center"
            android:textColor="@color/color_323232"
            android:textSize="40px"/>

        <CheckBox
            android:id="@+id/yinlian_checked"
            android:layout_width="65px"
            android:layout_height="65px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:button="@null"
            android:background="@drawable/pay_selector"
            android:checked="false"
            app:color_checked="@color/main_color"
            />

    </com.zhy.autolayout.AutoRelativeLayout>
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="134px"
            android:layout_marginTop="20px"
            android:background="@color/white"
            android:paddingLeft="40px"
            android:paddingRight="40px"
            >

            <TextView
                android:id="@+id/tv_commit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="确 定"
                android:textColor="@color/blue"
                android:textSize="60px"/>
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoRelativeLayout>
