<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/camera_header"
            android:layout_width="380px"
            android:layout_height="220px"
            android:layout_gravity="center"
            android:layout_marginLeft="40px"
            android:layout_marginTop="88px"
            android:src="@mipmap/icon_camera_header" />

        <TextView
            android:id="@+id/camera_deviceId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50px"
            android:layout_marginTop="146px"
            android:layout_toRightOf="@+id/camera_header"
            android:text="设备ID:6959657" />

        <TextView
            android:id="@+id/camera_deviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/camera_deviceId"
            android:layout_marginLeft="50px"
            android:layout_marginTop="28px"
            android:layout_toRightOf="@+id/camera_header"
            android:text="设备名称:6959657" />

    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/rim_list_black"/>
    <TextView
        android:id="@+id/s_baojin"
        android:layout_width="match_parent"
        android:layout_height="134px"
        android:drawableLeft="@mipmap/camera_set_police"
        android:drawablePadding="50px"
        android:drawableRight="@mipmap/img_right"
        android:gravity="center_vertical"
        android:paddingLeft="40px"
        android:paddingRight="30px"
        android:text="报警设置"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/cb_textcolor_checked"
        android:textSize="44px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="40px"
        android:background="@color/rim_list_black"/>
    <TextView
        android:id="@+id/s_tianjia"
        android:layout_width="match_parent"
        android:layout_height="134px"
        android:drawableLeft="@mipmap/camera_set_sensor"
        android:drawablePadding="50px"
        android:drawableRight="@mipmap/img_right"
        android:gravity="center_vertical"
        android:paddingLeft="40px"
        android:paddingRight="30px"
        android:text="添加传感器"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/cb_textcolor_checked"
        android:textSize="44px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="40px"
        android:background="@color/rim_list_black"/>
    <TextView
        android:id="@+id/s_update"
        android:layout_width="match_parent"
        android:layout_height="134px"
        android:drawableLeft="@mipmap/camera_set_pwd"
        android:drawablePadding="50px"
        android:drawableRight="@mipmap/img_right"
        android:gravity="center_vertical"
        android:paddingLeft="40px"
        android:paddingRight="30px"
        android:text="修改密码"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/cb_textcolor_checked"
        android:textSize="44px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="40px"
        android:background="@color/rim_list_black"/>
    <TextView
        android:id="@+id/s_video"
        android:layout_width="match_parent"
        android:layout_height="134px"
        android:drawableLeft="@mipmap/camera_set_video"
        android:drawablePadding="50px"
        android:drawableRight="@mipmap/img_right"
        android:gravity="center_vertical"
        android:paddingLeft="40px"
        android:paddingRight="30px"
        android:text="录像设置"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/cb_textcolor_checked"
        android:textSize="44px" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="40px"
        android:background="@color/rim_list_black"/>

    <TextView
        android:id="@+id/s_firmware"
        android:layout_width="match_parent"
        android:layout_height="134px"
        android:drawableLeft="@mipmap/camera_set_update"
        android:drawablePadding="50px"
        android:drawableRight="@mipmap/img_right"
        android:gravity="center_vertical"
        android:paddingLeft="40px"
        android:paddingRight="30px"
        android:text="固件更新"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/cb_textcolor_checked"
        android:textSize="44px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/rim_list_black"/>
    <TextView
        android:textColor="@color/cb_textcolor_checked"
        android:textSize="44px"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:gravity="center_vertical"
        android:paddingLeft="140px"
        android:text="对讲音量调节(0~9)"

        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/rim_list_black"/>
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="100px">
        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:max="9"
            android:progress="3" />
        <TextView
            android:id="@+id/video_size"
            android:layout_width="wrap_content"
            android:layout_marginRight="30px"
            android:layout_height="wrap_content"
            android:text="(5)"
            android:layout_marginLeft="30px"
            />
    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>