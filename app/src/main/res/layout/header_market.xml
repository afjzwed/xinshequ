<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/head_market_root"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="#ff9934"
    >
    <View
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="48px"/>
    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_below="@+id/status_bar"
        android:layout_width="match_parent"
        android:id="@+id/status_layout"
        android:layout_height="match_parent">
        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/market_search"
            android:layout_width="810px"
            android:layout_height="80px"
            android:background="@drawable/bg_market_search"
            android:layout_centerInParent="true"
            android:layout_marginLeft="135px"
            android:layout_marginStart="135px"
            android:layout_marginEnd="135px"
            android:layout_marginRight="135px"
            android:visibility="visible"
            >
            <ImageView
                android:id="@+id/iv_search_icon"
                android:layout_width="42px"
                android:layout_height="42px"
                android:layout_marginLeft="250px"
                android:layout_marginStart="250px"
                android:layout_centerVertical="true"
                android:src="@mipmap/scsy_ss"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="38px"
                android:layout_toRightOf="@id/iv_search_icon"
                android:hint="请输入商品名称"
                android:textColorHint="@color/market_tint_text"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10px"
                />
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoRelativeLayout>

    <include layout="@layout/toolbar_layout"
        android:id="@+id/toolbarBusiness"
        android:visibility="gone"
        />

    
</com.zhy.autolayout.AutoRelativeLayout>