<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <com.zhy.autolayout.AutoFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/camera_image"
            android:layout_width="match_parent"
            android:layout_height="500px"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_camera" />

        <ImageView
            android:id="@+id/share"
            android:src="@mipmap/share_camera"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_gravity="right"
            android:layout_marginTop="60px"
            android:layout_marginRight="60px"
            />

        <com.yxld.yxchuangxin.view.ShapedButton
            android:id="@+id/camera_bufang"
            android:layout_width="168px"
            android:layout_height="84px"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="18px"
            android:layout_marginRight="226px"
            android:background="#000000"
            android:text="未布防"
            android:textColor="@color/white"
            android:textSize="40px"
            app:round_radius="14px"
            app:shape_mode="round_rect" />

        <com.yxld.yxchuangxin.view.ShapedButton
            android:id="@+id/camera_status"
            android:layout_width="168px"
            android:layout_height="84px"
            android:layout_gravity="left|bottom"
            android:layout_marginBottom="18px"
            android:layout_marginLeft="40px"
            android:background="#000000"
            android:text="未在线"
            android:textColor="@color/white"
            android:textSize="40px"
            app:round_radius="14px"
            app:shape_mode="round_rect" />

        <com.yxld.yxchuangxin.view.ShapedButton
            android:id="@+id/camera_name"
            android:layout_width="168px"
            android:layout_height="84px"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="18px"
            android:layout_marginRight="40px"
            android:background="#000000"
            android:textColor="@color/white"
            android:textSize="40px"
            app:round_radius="14px"
            app:shape_mode="round_rect" />
    </com.zhy.autolayout.AutoFrameLayout>

    <com.yxld.yxchuangxin.view.DrawableCenterTextView
        android:id="@+id/camera_video"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_gravity="center"
        android:layout_marginBottom="20px"
        android:background="@color/common_grey_line_color"
        android:drawableLeft="@mipmap/camera_video"
        android:drawablePadding="18px"
        android:gravity="center_vertical"
        android:text="视频回放"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/color_646464"
        android:textSize="44px" />
</com.zhy.autolayout.AutoLinearLayout>