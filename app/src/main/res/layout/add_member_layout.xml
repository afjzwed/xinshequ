<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                       android:layout_width="match_parent"
                                       android:layout_height="134px">

    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="50px"
        android:layout_height="50px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50px"/>

    <TextView
        android:id="@+id/tv_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="26px"
        android:layout_marginStart="26px"
        android:layout_toRightOf="@+id/iv_head"
        android:text="账号"
        android:textColor="@color/color_646464"
        android:textSize="40px"/>

    <EditText
        android:id="@+id/tv_content"
        android:layout_width="500px"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50px"
        android:layout_marginStart="50px"
        android:layout_toRightOf="@+id/tv_head"
        android:background="@null"
        android:hint="请选择成员类型"
        android:singleLine="true"
        android:textColor="@color/color_646464"
        android:textColorHint="@color/color_b4b4b4"
        android:textSize="40px"/>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignLeft="@+id/tv_head"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="50px"
        android:background="@color/line1"/>

    <TextView
        android:id="@+id/tv_left"
        android:textSize="40px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="20px"
        android:layout_toLeftOf="@+id/iv_navigation"
        android:clickable="false"
        />

    <ImageView
        android:id="@+id/iv_navigation"
        android:layout_width="60px"
        android:layout_height="60px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="50px"
        android:src="@mipmap/zhgl_jt"/>

    <TextView
        android:id="@+id/tv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="50px"
        />
</com.zhy.autolayout.AutoRelativeLayout>