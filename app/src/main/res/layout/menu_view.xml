<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="50px"
    android:paddingTop="50px">

    <ImageView
        android:id="@+id/menu1"
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="80px"
        android:layout_toLeftOf="@+id/menu"
        android:src="@mipmap/menu_classify"
        />

    <ImageView
        android:id="@+id/menu3"
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_above="@+id/menu"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="80px"
        android:src="@mipmap/mine"
        />

    <ImageView
        android:id="@+id/menu2"
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_above="@+id/menu"
        android:layout_toLeftOf="@+id/menu"
        android:src="@mipmap/main_shoppingcar"
        />

    <TextView
        android:id="@+id/count_cart"
        android:layout_width="50px"
        android:layout_height="50px"
        android:layout_alignRight="@+id/menu2"
        android:layout_alignTop="@+id/menu2"
        android:layout_marginRight="10px"
        android:background="@drawable/red_dot_bg"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="25px"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/menu"
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/main_menu"/>

    <TextView
        android:id="@+id/count_menu"
        android:layout_width="50px"
        android:layout_height="50px"
        android:layout_alignRight="@+id/menu"
        android:layout_alignTop="@+id/menu"
        android:layout_marginRight="30px"
        android:background="@drawable/red_dot_bg"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="25px"
        android:visibility="invisible"
        />
</com.zhy.autolayout.AutoRelativeLayout>