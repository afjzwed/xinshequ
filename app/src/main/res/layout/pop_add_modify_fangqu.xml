<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/bg_transparent">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:layout_marginTop="20px"
            android:background="@drawable/fix_bg"
            android:layout_height="wrap_content">
            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/check_bufangshijian"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_height="134px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40px"
                    android:textColor="@color/color_646464"
                    android:text="布防时间"
                    android:layout_marginLeft="40px"
                    />
                <View
                    android:layout_width="2px"
                    android:layout_height="40px"
                    android:layout_marginLeft="20px"
                    android:background="@color/line"
                    />
                <TextView
                    android:id="@+id/tv_bufang_shijain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40px"
                    android:textColor="@color/color_646464"
                    android:hint="请选择布防时间"
                    android:layout_marginLeft="40px"
                    />
            </com.zhy.autolayout.AutoLinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/line"
                />
            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/check_chefangshijian"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_height="134px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40px"
                    android:textColor="@color/color_646464"
                    android:text="撤防时间"
                    android:layout_marginLeft="40px"
                    />
                <View
                    android:layout_width="2px"
                    android:layout_height="40px"
                    android:layout_marginLeft="20px"
                    android:background="@color/line"
                    />
                <TextView
                    android:id="@+id/tv_chefang_shijian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40px"
                    android:textColor="@color/color_646464"
                    android:hint="请选择撤防时间"
                    android:layout_marginLeft="40px"
                    />
            </com.zhy.autolayout.AutoLinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/line"
                />
            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/check_jieshuzhuangtai"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_height="134px">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40px"
                    android:textColor="@color/color_646464"
                    android:text="结束状态"
                    android:layout_marginLeft="40px"
                    />
                <View
                    android:layout_width="2px"
                    android:layout_height="40px"
                    android:layout_marginLeft="20px"
                    android:background="@color/line"
                    />
                <TextView
                    android:id="@+id/jieshu_zhuangtai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40px"
                    android:textColor="@color/color_646464"
                    android:hint="请选择结束状态"
                    android:layout_marginLeft="40px"
                    />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>