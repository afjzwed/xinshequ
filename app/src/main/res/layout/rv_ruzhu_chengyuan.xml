<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="250px"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.yxld.yxchuangxin.view.AutoCardView
        android:layout_width="match_parent"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        app:cardCornerRadius="14px"
        app:cardElevation="@dimen/card_view_elevation"
        android:layout_marginBottom="34px"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_height="220px">
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_avater"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_marginTop="@dimen/item_margin"
                android:layout_marginLeft="50px"
                />
            <TextView
                android:id="@+id/tv_live_Identity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_avater"
                android:layout_marginTop="20px"
                android:text="家属"
                android:textSize="40px"
                android:textColor="@color/main_color"
                android:layout_marginRight="0dp"
                android:layout_marginLeft="50px"/>
            <View
                android:id="@+id/view1"
                android:layout_width="1px"
                android:layout_toRightOf="@+id/iv_avater"
                android:layout_height="140px"
                android:background="@color/line1"
                android:layout_marginLeft="50px"
                android:layout_marginTop="40px"
                android:layout_marginBottom="40px" />
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张三丰"
                android:maxLength="4"
                android:layout_toRightOf="@+id/view1"
                android:layout_marginLeft="50px"
                android:textSize="40px"
                android:textColor="@color/color_646464"
                android:layout_marginTop="@dimen/item_margin" />
            <TextView
                android:id="@+id/tv_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40px"
                android:text="男"
                android:layout_marginTop="@dimen/item_margin"
                android:textColor="@color/color_646464"
                android:layout_marginLeft="34px"
                android:layout_toRightOf="@+id/tv_name"
                />
            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40px"
                android:textColor="@color/color_646464"
                android:text="身份证"
                android:layout_below="@+id/iv_avater"
                android:layout_marginTop="20px"
                android:layout_marginLeft="50px"
                android:layout_toRightOf="@+id/view1"
                />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40px"
                android:textColor="@color/color_646464"
                android:text="18888888888"
                android:layout_alignParentRight="true"
                android:layout_marginRight="144px"
                android:layout_marginTop="@dimen/item_margin"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40px"
                android:textColor="@color/color_646464"
                android:text="手机"
                android:layout_marginRight="20px"
                android:layout_marginTop="@dimen/item_margin"
                android:layout_toLeftOf="@+id/tv_phone"
                />
            <TextView
                android:id="@+id/tv_Identity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40px"
                android:textColor="@color/color_646464"
                android:text="430256156865962655"
                android:layout_marginTop="20px"
                android:layout_alignParentRight="true"
                android:layout_marginRight="144px"
                android:layout_below="@+id/iv_avater"
                />
            <ImageView
                android:id="@+id/iv_delet"
                android:layout_width="44px"
                android:layout_height="44px"
                android:src="@mipmap/rzcy_sc"
                android:layout_marginRight="50px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50px"
                />
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.yxld.yxchuangxin.view.AutoCardView>
</com.zhy.autolayout.AutoRelativeLayout>