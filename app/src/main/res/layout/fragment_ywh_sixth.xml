<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f5f5f5">

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="109px"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="46px"
        android:text="备案阶段-进行中"
        android:textColor="@color/color_2d97ff"
        android:textSize="43px"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="531px"
            android:layout_height="531px"
            android:src="@mipmap/ic_ywh_record"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="37px"
            android:text="备案中..."
            android:textColor="@color/color_333333"
            android:textSize="43px"/>

    </com.zhy.autolayout.AutoLinearLayout>

    <ImageView
        android:id="@+id/iv_no_data"
        android:layout_width="531px"
        android:layout_height="531px"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_no_data"/>

    <ScrollView
        android:layout_below="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/autoll_data0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28px"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="46px"
                android:paddingRight="72px"
                android:paddingTop="46px"
                android:visibility="visible">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="75px"
                        android:layout_height="75px"
                        android:src="@mipmap/ic_ywh_material"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40px"
                        android:layout_weight="1"
                        android:text="我的业委会基本资料"
                        android:textColor="@color/color_333333"
                        android:textSize="43px"/>

                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="43px"
                    android:layout_marginTop="43px"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_content_head"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:text="备案名称：中远公馆业主委员会"
                        android:textColor="@color/color_999999"
                        android:textSize="43px"/>

                    <TextView
                        android:id="@+id/tv_content_foot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="43px"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:text="备案时间：2018-05-09"
                        android:textColor="@color/color_999999"
                        android:textSize="43px"/>

                </com.zhy.autolayout.AutoLinearLayout>

            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/autoll_data1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/autoll_data0"
                android:layout_marginTop="28px"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="46px"
                android:paddingRight="72px"
                android:paddingTop="46px"
                android:visibility="visible">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="75px"
                        android:layout_height="75px"
                        android:src="@mipmap/ic_ywh_membershow"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40px"
                        android:layout_weight="1"
                        android:text="业委会成员展示"
                        android:textColor="@color/color_333333"
                        android:textSize="43px"/>

                </com.zhy.autolayout.AutoLinearLayout>

                <View
                    style="@style/line"
                    android:layout_marginTop="49px"
                    android:visibility="visible"/>

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="130px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_click_name1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="查看业委会成员名单"
                        android:textColor="@color/main_color"
                        android:textSize="43px"/>

                    <ImageView
                        android:layout_width="21px"
                        android:layout_height="38px"
                        android:src="@mipmap/ic_jt_blue"/>
                </com.zhy.autolayout.AutoLinearLayout>
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/autoll_data2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/autoll_data1"
                android:layout_marginTop="28px"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="46px"
                android:paddingRight="72px"
                android:paddingTop="46px"
                android:visibility="visible">

                <com.zhy.autolayout.AutoLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="75px"
                        android:layout_height="75px"
                        android:src="@mipmap/ic_ywh_accessory"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40px"
                        android:layout_weight="1"
                        android:text="业委会表决文件展示"
                        android:textColor="@color/color_333333"
                        android:textSize="43px"/>

                </com.zhy.autolayout.AutoLinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>
            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoRelativeLayout>
    </ScrollView>
</com.zhy.autolayout.AutoRelativeLayout>