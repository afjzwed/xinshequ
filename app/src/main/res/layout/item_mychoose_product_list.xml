<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="168px"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.yxld.yxchuangxin.view.ShapedImageView
        android:id="@+id/iv_choosed_product"
        android:layout_width="118px"
        android:scaleType="centerCrop"
        android:layout_height="118px"
        android:layout_centerVertical="true"
        app:round_radius="5px"
        android:layout_marginLeft="40px"
        />
    <TextView
        android:id="@+id/tv_choosed_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_toRightOf="@+id/iv_choosed_product"
        android:layout_marginLeft="50px"
        android:layout_marginTop="32px"
        android:textSize="37px"
        android:textColor="@color/rim_list_black"
        />
    <TextView
        android:id="@+id/tv_choosed_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_choosed_product_name"
        android:layout_toRightOf="@+id/iv_choosed_product"
        android:layout_marginLeft="50px"
        android:text=""
        android:layout_marginTop="26px"
        android:textSize="30px"
        />

    <ImageView
        android:id="@+id/iv_product_delet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_product_list_delet"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="40px"
        />
    <TextView
        android:id="@+id/tv_product_add"
        android:layout_width="58px"
        android:layout_height="58px"
        android:textSize="47px"
        android:text="＋"
        android:gravity="center"
        android:layout_toLeftOf="@+id/iv_product_delet"
        android:layout_centerVertical="true"
        android:layout_marginRight="98px"
        android:background="@drawable/tv_product_add_bg"
        />
    <TextView
        android:id="@+id/tv_product_count"
        android:layout_width="84px"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/tv_product_add"
        android:layout_centerVertical="true"
        android:text="200"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/tv_product_reduce"
        android:layout_width="58px"
        android:layout_height="58px"
        android:textSize="47px"
        android:text="－"
        android:gravity="center"
        android:textColor="@color/rim_list_black"
        android:layout_toLeftOf="@+id/tv_product_count"
        android:layout_centerVertical="true"
        android:background="@drawable/tv_product_reduce_bg"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ccc"
        android:layout_alignParentBottom="true"
        />
</com.zhy.autolayout.AutoRelativeLayout>