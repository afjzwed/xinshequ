<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_click_recycler_item_bg"
    >
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_goods_list_rank_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="销量"
            android:textSize="40px"
            android:textColor="@color/color_646464"
            />
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="14px"
            >
            <ImageView
                android:id="@+id/iv_goods_list_rank_up"
                android:layout_width="18px"
                android:layout_height="9px"
                android:src="@drawable/selector_search_to_rank_up"
                />
            <ImageView
                android:id="@+id/iv_goods_list_rank_down"
                android:layout_marginTop="6px"
                android:layout_width="18px"
                android:layout_height="9px"
                android:src="@drawable/selector_search_to_rank_down"
                />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:id="@+id/view_goods_list_rank_line"
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_marginTop="40px"
        android:layout_marginBottom="40px"
        android:background="@color/color_d6d7dc"
        android:layout_alignParentRight="true"
        />
</com.zhy.autolayout.AutoRelativeLayout>