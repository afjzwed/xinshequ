<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="@color/color_4c000000"
    android:layout_height="match_parent">
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="932px"
        android:orientation="vertical"
        android:id="@+id/content"
        android:background="@drawable/add_fangxing_bg"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="134px"
            android:text="添加物品信息"
            android:gravity="center"
            android:textColor="@color/color_323232"
            android:textSize="48px"
            />
        <View
            android:id="@+id/view1"
            style="@style/line"/>
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="34px"
            android:layout_marginRight="34px"
            android:layout_height="134px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="物品名称"
                android:textSize="40px"
                android:textColor="@color/color_646464"
                android:layout_centerVertical="true"
                />
            <EditText
                android:id="@+id/et_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:hint="请输入名称"
                android:maxLength="10"
                android:gravity="right"
                android:inputType="textFilter"
                android:textCursorDrawable="@null"
                android:textSize="40px"
                android:textColorHint="@color/color_b4b4b4"
                android:textColor="@color/color_646464"
                android:layout_centerVertical="true"
                />
            <View
                android:layout_alignParentBottom="true"
                style="@style/line"/>
        </com.zhy.autolayout.AutoRelativeLayout>
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="34px"
            android:layout_marginRight="34px"
            android:layout_height="134px">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="物品数量"
                android:textSize="40px"
                android:textColor="@color/color_646464"
                android:layout_centerVertical="true"
                />
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="306px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:background="@drawable/pop_addfangxing_bg"
                android:layout_height="84px">
                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/iv_jian"
                    android:layout_width="84px"
                    android:layout_height="84px">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:background="@mipmap/wyjf_jh01"
                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content" />
                </com.zhy.autolayout.AutoRelativeLayout>
                <TextView
                    android:id="@+id/tv_count"
                    android:layout_width="138px"
                    android:text="1"
                    android:gravity="center"
                    android:layout_height="84px" />
                <com.zhy.autolayout.AutoRelativeLayout
                    android:id="@+id/iv_jia"
                    android:layout_width="84px"
                    android:layout_height="84px">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:background="@mipmap/wyjf_jh02"
                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content" />
                </com.zhy.autolayout.AutoRelativeLayout>
            </com.zhy.autolayout.AutoLinearLayout>
            <View
                android:layout_alignParentBottom="true"
                style="@style/line"/>
        </com.zhy.autolayout.AutoRelativeLayout>
        <EditText
            android:id="@+id/et_remark"
            android:layout_width="864px"
            android:layout_height="wrap_content"
            android:minHeight="168px"
            android:layout_gravity="center_horizontal"
            android:hint="请输入您的留言备注"
            android:maxLength="50"
            android:textSize="40px"
            android:padding="34px"
            android:gravity="start"
            android:layout_marginTop="50px"
            android:layout_marginBottom="50px"
            android:background="@drawable/edit_fangxing_bg"
            android:textColorHint="@color/color_b4b4b4"
            android:textColor="@color/color_646464"
            />
        <View
            style="@style/line"/>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="134px">
            <TextView
                android:id="@+id/tv_cacanl"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="取消"
                android:gravity="center"
                android:textSize="38px"
                android:textColor="@color/color_323232"
                />
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/line1"/>
            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="确定"
                android:gravity="center"
                android:textSize="38px"
                android:textColor="@color/main_color"
                />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>