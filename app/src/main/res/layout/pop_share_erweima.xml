<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/pop_bg"
    android:layout_height="match_parent">
    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/ll_share"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享给"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="66px"
            android:textSize="40px"
            android:textColor="@color/color_646464"
            />
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="52px"
            android:layout_marginBottom="82px"
            android:layout_height="wrap_content">
            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/share_weixin"
                android:layout_width="0px"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="136px"
                    android:src="@mipmap/lfyqm_fx01"
                    android:layout_height="136px" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="28px"
                    android:layout_height="wrap_content"
                    android:text="微信好友"
                    />
            </com.zhy.autolayout.AutoLinearLayout>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0px"
                android:id="@+id/share_qq"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="136px"
                    android:src="@mipmap/lfyqm_fx02"
                    android:layout_height="136px" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28px"
                    android:text="QQ好友"
                    />
            </com.zhy.autolayout.AutoLinearLayout>
            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="0px"
                android:id="@+id/share_msg"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="136px"
                    android:src="@mipmap/lfyqm_fx03"
                    android:layout_height="136px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28px"
                    android:text="短信"
                    />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
        <View
            style="@style/line"/>
        <TextView
            android:id="@+id/tv_cancal"
            android:layout_width="match_parent"
            android:layout_height="134px"
            android:text="取消"
            android:gravity="center"
            android:textSize="48px"
            android:textColor="@color/main_color"
            />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>